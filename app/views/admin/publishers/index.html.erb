<div class="grid-container">
  <h2><%= t '.title' %></h2>

  <table>
    <thead>
      <tr>
        <td><%= Publisher.human_attribute_name('id') %></td>
        <td><%= Publisher.human_attribute_name('name') %></td>
        <td><%= Publisher.human_attribute_name('website') %></td>
        <td class="text-right">
          <%= link_to new_admin_publisher_path do %>
            <%= icon 'fas', 'plus' %>
          <% end %>
        </td>
      </tr>
    </thead>
    <tbody>
      <%= render @publishers %>
    </tbody>
  </table>
</div>
